<p id="notice"><%= notice %></p>

<h1>Course Catalog</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.course_number%></td>
      <td><%= course.name%></td>


        <% if !@teacher.teacher_info.courses.nil? && @teacher.teacher_info.courses.exists?(id: course.id) %>
          <td> Registered </td>
        <% else %>
          <td><%= link_to 'Register for course', register_to_course_teacher_course_path(@teacher, course), method: :post %></td>
        <% end %>


       <td><%= link_to 'Show', course %></td>


    </tr>
  <% end %>
  </tbody>
</table>

<br></br>

<%=link_to 'Back', teacher_path(@teacher) %>


