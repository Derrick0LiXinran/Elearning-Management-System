<p id="notice"><%= notice %></p>

<p>
  <strong>Course Number:</strong>
  <%= @course.course_number %>
</p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Discipline:</strong>
  <%= @course.discipline.name %>
</p>

<p>
  <strong>Area:</strong>
  <%= @course.major.major_name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @course.price %>
</p>

<% if current_user.type == 'Student' %>
  <%= link_to 'Course Catalog', student_index_course_path(current_user) %>
<% elsif current_user.type == 'Teacher'%>
  <%= link_to 'Course Catalog', teacher_index_course_path(current_user) %>
<% elsif current_user.type == 'Admin'%>
  <%= link_to 'Course Catalog', courses_path %>
<% end %>

<%= link_to 'Back', :back %>
